{
  "name": "Term-O",
  "version": "0.8.0",
  "description": "Browser Command Line: Execute commands directly from your browser.",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "history",
    "sidePanel",
    "fontSettings",
    "offscreen"
  ],
  "host_permissions": ["http://*/", "https://*/"],
  "icons": {
    "16": "assets/images/logo-16_x_16.png",
    "32": "assets/images/logo-32_x_32.png",
    "48": "assets/images/logo-48_x_48.png",
    "512": "assets/images/logo-512_x_512.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./assets/js/content.js"]
    }
  ],
  "action": {
    "default_title": "Toggle Term-O"
  },
  "background": {
    "service_worker": "./assets/js/background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Alt+T" },
      "description": "Toggle Term-O"
    }
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/js/web-components.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
