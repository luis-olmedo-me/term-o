{
  "name": "Term-O",
  "version": "0.6.0",
  "description": "Simple terminal for browser",
  "manifest_version": 3,
  "permissions": ["tabs", "activeTab", "storage", "scripting", "history", "sidePanel"],
  "host_permissions": ["http://*/", "https://*/"],
  "icons": {
    "16": "images/logo-16_x_16.png",
    "48": "images/logo-48_x_48.png",
    "128": "images/logo-128_x_128.png",
    "512": "images/logo-512_x_512.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content.js"]
    }
  ],
  "action": {
    "default_title": "Click to open panel",
    "default_popup": "sidepanel.html"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "open-terminal": {
      "suggested_key": { "default": "Alt+T" },
      "description": "Open the terminal"
    }
  }
}
