{
  "name": "Term-O",
  "version": "0.9.0",
  "description": "A terminal-style developer tool to inspect and interact with web pages through browser APIs.",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "history",
    "sidePanel",
    "fontSettings",
    "offscreen"
  ],
  "host_permissions": ["http://*/", "https://*/"],
  "icons": {
    "16": "assets/icons/logo-16_x_16.png",
    "32": "assets/icons/logo-32_x_32.png",
    "48": "assets/icons/logo-48_x_48.png",
    "512": "assets/icons/logo-512_x_512.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/assets/js/content.js"],
      "type": "module",
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Toggle Term-O"
  },
  "background": {
    "service_worker": "/assets/js/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Alt+T" },
      "description": "Toggle Term-O"
    }
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/web-components.js",
        "assets/js/injectables.js",
        "assets/js/shared/*.js"
      ],
      "matches": ["<all_urls>"],
      "type": "module"
    }
  ]
}
